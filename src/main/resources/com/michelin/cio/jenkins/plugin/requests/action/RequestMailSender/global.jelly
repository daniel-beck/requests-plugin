<?jelly escape-by-default='true'?>

<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<f:section title="${%GlobalSectionTitle}" name="globalRequests">
		<f:entry title="${%EnableDeleteJob}" field="enableDeleteJob" default="true" >
  			<f:checkbox />
		</f:entry>
		<f:entry title="${%EnableDeleteBuild}" field="enableDeleteBuild" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%EnableDeleteFolder}" field="enableDeleteFolder" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%EnableUnlockBuild}" field="enableUnlockBuild" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%EnableRenameJob}" field="enableRenameJob" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%EnableRenameFolder}" field="enableRenameFolder" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%EnableDeleteMultiBranch}" field="enableDeleteMultiBranch" >
  			<f:checkbox/>
		</f:entry>
		<f:entry title="${%Admin User ID}" field="unlockuser" description="${%UserID}">
            <f:textbox />
        </f:entry>
        <f:entry title="${%Admin API Token}" description="${%Token}">
            <f:password field="unlockpassword" />
        </f:entry>
        
		<f:entry title="${%EnableEmails}" field="enableEmails" description="${%EmailOption}">
  		<f:checkbox/>
		</f:entry>
        <f:entry title="${%Mail Server}" field="requestemailserver" description="${%MailServer}">
            <f:textbox />
        </f:entry>
		<f:entry title="${%Email Domain}" field="requestmaildomain" description="${%EmailDomain}">
			<f:textbox />
		</f:entry>
       <f:entry title="${%Admin Email Address}" field="requestadminemail" description="${%AdminEmail}">
			<f:textbox />
		</f:entry>
		<f:entry title="${%Email Host}" field="requestemailhost" description="${%EmailHost}">
			<f:textbox default="localhost" />
		</f:entry>
			<f:entry title="Test email configuration: Enter full email address" >
				<f:textbox name="testEmailAddress" field="testEmailAddress" />
				<f:validateButton title="${%Send Test Email}" progress="${%Sending...}" method="testEmail" with="testEmailAddress" />
			</f:entry>
	</f:section>
</j:jelly>
